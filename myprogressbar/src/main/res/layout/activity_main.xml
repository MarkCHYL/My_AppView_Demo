<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mark = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.view.mark.myprogressbar.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水平进度条自定义" />

    <com.view.mark.myprogressbar.view.HorizontalProgressbarWithProgress
        android:id="@+id/pgone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:padding="15dp"
        android:background="#c2c2c2"
        android:layout_marginTop="30dp"
        mark:progress_reach_color="#000000"/>

    <com.view.mark.myprogressbar.view.HorizontalProgressbarWithProgress
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="80"
        android:padding="15dp"
        android:background="#c2c2c2"
        android:layout_marginTop="10dp"
        mark:progress_reach_color="#000000"
        mark:progress_text_offset="15dp"
        mark:progress_text_size="13sp"
        mark:progress_unreach_height="18dp"
        mark:progress_reach_height="18dp"
        mark:progress_text_color="#00f3ff"
        mark:progress_unreach_color="#ffffff"/>

    <com.view.mark.myprogressbar.view.RoundProgressbarWithProgress
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="80"
        android:padding="5dp"
        mark:radius="40dp"
        android:background="#c2c2c2"
        android:layout_marginTop="10dp"
        mark:progress_reach_color="#000000"
        mark:progress_text_offset="15dp"
        mark:progress_text_size="13sp"
        mark:progress_unreach_height="4dp"
        mark:progress_reach_height="2dp"
        mark:progress_text_color="#000000"
        mark:progress_unreach_color="#ffffff"/>
</LinearLayout>
